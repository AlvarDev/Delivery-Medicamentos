        android:text="@string/s_mapa"/>

-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/s_distrito"/>

            <Spinner
                android:id="@+id/spiDistritos"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"/>
            <TextView
                style="@style/TextViewStyle"
                android:text="@string/s_name"/>

            <EditText
                android:id="@+id/eteNameDirection"
                style="@style/EditTextStyle"
                android:inputType="textPostalAddress"/>

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/s_direccion"/>

            <EditText
                android:id="@+id/eteDirection"
                style="@style/EditTextStyle"
                android:inputType="textPostalAddress"/>
            <TextView
                style="@style/TextViewStyle"
                android:text="@string/s_referencia"/>

            <EditText
                android:id="@+id/eteReferencia"
                style="@style/EditTextStyle"
                android:inputType="textPostalAddress"/>

            <Button
                android:id="@+id/btnSaveDirection"
                android:text="@string/btn_save"
                style="@style/ButtonStyle"/>


        </LinearLayout>
    </ScrollView>


</LinearLayout>